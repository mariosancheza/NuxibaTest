@model IEnumerable<Prueba1.Models.Comments>

@if (Model.Count() > 0) {
    <ul>
        @foreach (var item in Model)
        {
            <li>
                @Html.DisplayFor(modelItem => item.name)
                <ul>
                    <li>
                        @Html.DisplayFor(modelItem => item.email)
                    </li>
                    <li>
                        @Html.DisplayFor(modelItem => item.body)
                    </li>

                </ul>
            </li>
        }
    </ul>
}

